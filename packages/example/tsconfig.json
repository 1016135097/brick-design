{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": ".",
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "declaration": true,
    "outDir": "./lib",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "./typings.d.ts"
  ]
}
